<h1>Article Index</h1>
	<table>
		<thead>
			<tr>
				<th>ID</th>
				<th>Title</th>
				<th>Description</th>
				<th colspan="3">Action</th>
			</tr>
		</thead>
			<tbody>
				<% @articles.each do |article| %>
				<tr>
					<td><%=article.id %></td>
					<td><%= article.title %></td>
					<td><%= article.description %></td>
					<td><%=link_to "Edit Article",edit_article_path(article) %></td>
					<td><%=link_to "Show Article",article_path(article) %></td>
					<td><%=link_to "Delete Article",article_path(article),method: :delete, data: { confirm: "Are you sure?" } %></td>
					<% end %>
				</tr>
			</tbody>
	</table>
<h3><%=link_to "Add New Article",new_article_path %></h3>
<h3 text-color="red" ><%=link_to "Back to Home Page",root_path %></h3>



